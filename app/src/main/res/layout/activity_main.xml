<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.whatsapp.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/ivLogom"
                android:layout_centerHorizontal="true"
                android:foregroundGravity="center"
                android:src="@drawable/cometchat_white"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvComet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivLogom"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="Whatsapp Alpha"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="32sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvKS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvComet"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:gravity="center"
                android:text="Welcome"
                android:textColor="@color/colorPrimary"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvKS"
                android:layout_marginStart="32dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:text="Login with one of our sample users"
                android:textSize="18sp" />

        <GridLayout
            android:id="@+id/grid"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSL"
            android:layout_centerHorizontal="true"
            android:columnCount="2">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="12dp"
                android:paddingStart="8dp"
                android:id="@+id/superhero1"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:rippleColor="@color/light_grey"
                android:clickable="true"
                android:paddingEnd="8dp"
                android:backgroundTint="@color/primaryTextColor"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <RelativeLayout
                        android:id="@+id/superhero1_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:id="@+id/superhero1_progressbar"
                            android:visibility="gone"
                            android:layout_centerInParent="true"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <ImageView
                            android:layout_centerInParent="true"
                            android:src="@drawable/ironman"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/superhero1_avatar"
                        android:fontFamily="sans-serif-medium"
                        android:text="Sample 1"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorWhite"
                        android:textSize="16sp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="12dp"
                android:paddingStart="8dp"
                android:id="@+id/superhero2"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:rippleColor="@color/light_grey"
                android:clickable="true"
                android:paddingEnd="8dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/primaryTextColor"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <RelativeLayout
                        android:id="@+id/superhero2_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:id="@+id/superhero2_progressbar"
                            android:visibility="gone"
                            android:layout_centerInParent="true"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <ImageView
                            android:layout_centerInParent="true"
                            android:src="@drawable/captainamerica"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/superhero2_avatar"
                        android:fontFamily="sans-serif-medium"
                        android:text="Sample 2"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorWhite"
                        android:textSize="16sp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>



        </GridLayout>

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grid"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="32dp"

                android:text="or"
                android:textSize="16sp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSignIn"
                android:layout_centerHorizontal="true"
                android:columnCount="2"
                android:foregroundGravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="40dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="8dp"
                    android:text="Login"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorWhite"
                    android:textSize="16sp"
                    app:rippleColor="@color/light_grey" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:backgroundTint="@color/cardview_dark_background"
                    android:padding="8dp"
                    android:text="Register"
                    android:onClick="regUser"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorWhite"
                    android:textSize="16sp"
                    app:rippleColor="@color/light_grey" />
            </GridLayout>


        <TextView
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:text="@string/copyright"
            android:textSize="@dimen/twelve"
            android:letterSpacing="0.1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>